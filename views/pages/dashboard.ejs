        <!-- Other Tabs Placeholder -->
<!-- Orders Tab (Step-by-step with Real Total Calculation) -->
<!-- Orders Tab (Step-by-step with Real Total Calculation + Delete Btn + Payment, Address + Date/Time) -->
<div id="orders" class="tab-content hidden space-y-6">
  <% if (orders && orders.length) { %>
    <% orders.forEach(order => { 
         let calculatedTotal = 0;
    %>
      <div class="bg-slate-800/90 backdrop-blur-xl rounded-2xl shadow-xl p-6 border border-slate-700 relative">
        
        <!-- Delete Button -->
        <form action="/orders/<%= order._id %>?_method=DELETE" method="POST" 
              onsubmit="return confirm('Are you sure you want to delete this order?')" 
              class="absolute top-3 right-3">
          <button type="submit" 
                  class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-lg text-sm shadow-md" 
                  style="transition: background-color 0.3s, transform 0.2s;">
            Delete
          </button>
        </form>

        <!-- STEP 1: Order ID & Date/Time -->
        <div class="mb-4">
          <div class="text-purple-400 font-semibold break-all">Order ID: <%= order._id %></div>
          
          <% if (order.createdAt) { 
               const orderDate = new Date(order.createdAt);
               const options = { year: 'numeric', month: 'short', day: 'numeric' };
               const formattedDate = orderDate.toLocaleDateString('en-US', options);
               const formattedTime = orderDate.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
          %>
            <div class="text-slate-400 text-sm mt-1">
              Date: <span class="text-slate-200 font-semibold"><%= formattedDate %></span> | 
              Time: <span class="text-slate-200 font-semibold"><%= formattedTime %></span>
            </div>
          <% } %>
        </div>

        <!-- STEP 2: User Name -->
        <div class="mb-2">
          <div class="text-slate-200 font-medium">
            Customer: 
            <%= (order.user && order.user.name) 
                ? order.user.name 
                : (order.shippingDetails ? order.shippingDetails.fullName : 'N/A') %>
          </div>
        </div>

        <!-- STEP 3: Payment Method -->
        <div class="mb-2">
          <div class="text-slate-400">
            Payment: 
            <span class="text-slate-200 font-semibold">
              <%= order.paymentMethod || 'Not Provided' %>
            </span>
          </div>
        </div>

        <!-- STEP 4: Address -->
        <div class="mb-4">
          <div class="text-slate-400">Address:</div>
          <div class="text-slate-200 text-sm leading-relaxed mt-1">
            <%= order.shippingDetails ? order.shippingDetails.address : 'N/A' %><br>
            <%= order.shippingDetails ? order.shippingDetails.city : '' %>, 
            <%= order.shippingDetails ? order.shippingDetails.state : '' %> 
            <%= order.shippingDetails ? order.shippingDetails.zip : '' %>
          </div>
        </div>

        <!-- STEP 5: Items (Image + Name + Qty + Line Total) -->
        <div class="mb-2">
          <div class="space-y-3">
            <% order.items.forEach(item => { 
                 const unit = (item.productId && item.productId.price) ? item.productId.price : (item.price || 0);
                 const qty = item.quantity || 1;
                 const lineTotal = unit * qty;
                 calculatedTotal += lineTotal;
            %>
              <div class="grid grid-cols-1 sm:grid-cols-12 items-center gap-3 bg-slate-700/40 rounded-xl p-3">
                
                <!-- Image -->
                <div class="sm:col-span-2">
                  <img src="<%= item.productId && item.productId.image ? item.productId.image : '/images/placeholder.png' %>" 
                       alt="<%= item.productId && item.productId.name ? item.productId.name : 'Item' %>" 
                       class="w-16 h-16 rounded-lg object-cover shadow-md">
                </div>

                <!-- Item Name -->
                <div class="sm:col-span-4">
                  <div class="text-slate-200 font-medium">
                    <%= (item.productId && item.productId.name) ? item.productId.name : 'Item' %>
                  </div>
                </div>

                <!-- Qty -->
                <div class="sm:col-span-3">
                  <div class="text-slate-400">
                    Qty: <span class="text-slate-200 font-semibold"><%= qty %></span>
                  </div>
                </div>

                <!-- Item Total -->
                <div class="sm:col-span-3 sm:text-right">
                  <div class="font-bold text-emerald-400">Rs <%= lineTotal %></div>
                </div>
              </div>
            <% }) %>
          </div>
        </div>

        <!-- FINAL: Order Total (Real Calculation) -->
        <div class="mt-5 pt-4 border-t border-slate-700 flex justify-between">
          <div class="text-slate-400">Order Total</div>
          <div class="text-2xl font-bold text-emerald-400">Rs <%= calculatedTotal %></div>
        </div>
      </div>
    <% }) %>
  <% } else { %>
    <div class="text-center text-slate-400 font-medium">No Orders Found</div>
  <% } %>
</div>


<!-- Menu Tab -->
